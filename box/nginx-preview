	server_name preview.d-portal.iatistandard.org;
	listen *:80;
	listen *:443 ssl;
	listen [::]:80;
	listen [::]:443 ssl;
	ssl_certificate /etc/letsencrypt/live/preview.d-portal.iatistandard.org/fullchain.pem; # managed by Certbot
